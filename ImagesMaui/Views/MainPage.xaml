<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ImagesMaui.ViewModels"
             x:Class="ImagesMaui.MainPage"
             x:DataType="vm:MainViewModel">

    <VerticalStackLayout>

        <Frame BorderColor="Blue" WidthRequest="400" HeightRequest="100" Padding="10">
            <Label Text="{Binding Nadpis}" FontSize="24"/>
        </Frame>
        
        <Frame BorderColor="Red" WidthRequest="100" HeightRequest="100" Padding="10">
            <Image Source="{Binding Img}" WidthRequest="100" HeightRequest="100"/>
        </Frame>

        <Frame BorderColor="Violet" WidthRequest="100" HeightRequest="100" Padding="10">
            <Image Source="{Binding  ImgPath}" WidthRequest="100" HeightRequest="100"/>
        </Frame>

        <Frame BorderColor="Green" WidthRequest="100" HeightRequest="100" Padding="10">
            <Image Source="https://aka.ms/campus.jpg" WidthRequest="100" HeightRequest="100"/>
        </Frame>


    </VerticalStackLayout>

</ContentPage>
